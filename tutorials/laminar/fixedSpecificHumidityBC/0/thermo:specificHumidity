FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      thermo:specificHumidity;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    walls 
    {
        type            zeroGradient;
    }

    inletTop 
    {
        type            fixedHumidity;
        mode            specific;
        humidity        14.8;
        value           uniform 0;
    }

    inletBottom 
    {
        type            fixedValue;
        value           uniform 0;
    }

    outletTop
    {
        type            zeroGradient;
    }

    outletBottom
    {
        type            zeroGradient;
    }

    front
    {
        type            empty;
    }

    back
    {
        type            empty;
    }
}

